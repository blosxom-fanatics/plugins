package entry_num;

use strict;
use vars qw($number);

# --- Configurable variables -----------

# --- Plug-in package variables --------

# --------------------------------------

sub start {
  return 1;
}

sub filter {
  my($pkg, $files_ref) = @_;

  $number = scalar(keys %$files_ref);

  return 1;
}

1;
